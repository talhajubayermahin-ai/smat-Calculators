
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat with TALHA Assistant</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.3/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
        body {
            background-color: #1a1a1a;
            color: #f1f1f1;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        input {
            background-color: #333;
            border: none;
        }
        #chatbox div {
            background-color: #333;
            margin-bottom: 5px;
            max-width: 70%;
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen text-white">
    <div class="px-2 w-full max-w-2xl">
        <header class="py-5 text-center">
            <h1 class="text-xl font-bold">Chat with TALHA Assistant</h1>
        </header>
        <div id="chatbox" class="flex flex-col items-start overflow-y-auto h-96"></div>
        <div class="flex flex-row my-5">
            <input
                class="shadow flex-grow rounded p-2 mr-2 text-white placeholder-gray-400"
                id="messageInput"
                type="text"
                placeholder="Type a message..."
            />
            <button
                class="bg-green-600 hover:bg-green-700 rounded py-2 px-4 text-white font-bold"
                id="sendButton"
            >
                Send Message âž¤
            </button>
        </div>
    </div>
    <script>
        const chatbox = document.getElementById("chatbox");
        const messageInput = document.getElementById("messageInput");
        const sendButton = document.getElementById("sendButton");
        const chatId = crypto.randomUUID();

        let receiving = false;
        const systemPrompt = "You are TALHA Assistant - a helpful and friendly chatbot designed for users aged 13-20 years old. Your specialty is technology, education, and productivity tools, including website tools, calculators, AI tools, and online learning resources. Provide clear, step-by-step, and encouraging guidance, using simple language suitable for teens and young adults. Explain complex topics with examples and easy-to-follow instructions. Be patient, slightly humorous, and professional, never rude or sarcastic. Understand ads and monetization strategies, giving safe advice about how to add ads like Google AdSense or Adsterra responsibly. Never provide unsafe, illegal, or harmful instructions, and always prioritize user safety and clarity. Ask clarifying questions but always provide helpful, actionable guidance.";

        function createMessageElement(text, alignment) {
            const messageElement = document.createElement("div");

            messageElement.className = `inline-block my-2.5 p-2.5 rounded border ${
                alignment === "left" ? "self-start" : "self-end"
            }`;
            messageElement.textContent = text;
            return messageElement;
        }

        function connectWebSocket(message) {
            receiving = true;
            const url = "wss://backend.buildpicoapps.com/api/chatbot/chat";
            const websocket = new WebSocket(url);

            websocket.addEventListener("open", () => {
                websocket.send(
                    JSON.stringify({
                        chatId: chatId,
                        appId: "well-decade",
                        systemPrompt: systemPrompt,
                        message: message,
                    })
                );
            });

            const messageElement = createMessageElement("", "left");
            chatbox.appendChild(messageElement);

            websocket.onmessage = (event) => {
                messageElement.innerText += event.data;
                chatbox.scrollTop = chatbox.scrollHeight;
            };

            websocket.onclose = (event) => {
                if (event.code === 1000) {
                    receiving = false;
                } else {
                    messageElement.textContent += "Error getting response from server. Refresh the page and try again.";
                    chatbox.scrollTop = chatbox.scrollHeight;
                    receiving = false;
                }
            };
        }

        sendButton.addEventListener("click", () => {
            if (!receiving && messageInput.value.trim() !== "") {
                const messageText = messageInput.value.trim();
                messageInput.value = "";
                const messageElement = createMessageElement(messageText, "right");
                chatbox.appendChild(messageElement);
                chatbox.scrollTop = chatbox.scrollHeight;

                connectWebSocket(messageText);
            }
        });

        messageInput.addEventListener("keydown", (event) => {
            if (
                event.key === "Enter" &&
                !receiving &&
                messageInput.value.trim() !== ""
            ) {
                event.preventDefault();
                sendButton.click();
            }
        });
    </script>
</body>
</html>
